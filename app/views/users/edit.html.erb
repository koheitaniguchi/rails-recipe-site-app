<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        ユーザー編集
      </h1>
    </div>
  </div>
</section>

<%= form_for @user do |f| %>

<%= f.label :username, "ユーザー名" %>
<%= f.text_field :username %><br>

<%= f.label :email, "メールアドレス" %>
<%= f.text_field :email %><br>

<%= f.label :profile, "プロフィール" %>
<%= f.text_field :profile %><br>

<%= f.label :profile_image, "プロフィール画像" %>
<%= f.attachment_field :profile_image %><br>

<%= f.submit "更新" %>

<% end %>