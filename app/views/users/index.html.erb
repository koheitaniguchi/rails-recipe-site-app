<h1 class="text-center">ユーザー一覧</h1>
<div class="container">
  <div class="row">
    <% @users.each do |user| %>
      <div class=" pb-4 col-lg-4">
        <div class="card">
          <%= link_to user_path(user) do %>
            <%= attachment_image_tag user, :profile_image, fallback: "no-image.png", class:"card-img-top img-fluid", alt:"Responsive image" %>
          <% end %>
          <%=link_to user.username, user_path(user) %>
          <p>投稿数：<%= user.recipes.count %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>