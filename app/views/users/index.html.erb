
<div class="album py-5 bg-light">
  <h1 class="text-center">ユーザー一覧</h1><br>
    <div class="container">
    <div class="hom">
      <div class="row">
        <% @users.each do |user| %>
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <%= link_to user_path(user) do %>
              <%= attachment_image_tag user, :profile_image, fallback: "no-image.png", class:"bd-placeholder-img card-img-top", width:"100%", height:"225" %>
            <% end %>
            <div class="card-body bg-secondary">
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <div class="user">
                    <%=link_to user.username, user_path(user), class:"text-light" %>
                  </div>
                </div>
                <div class="contribution">
                <p class="text-light">投稿数：<%= user.recipes.count %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
    </div>
</div>