<!DOCTYPE html>
<html>
  <head>
    <title>Rsa</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body> 
    <div class="container">
      <% if flash[:notice] %>
        <div class="notification is-info">
          <p class="notice"><%= notice %></p>
        </div>
      <% end %>
      <% if flash[:alert] %>
        <div class="notification is-danger">
          <p class="alert"><%= alert %></p>
        </div>
      <% end %>

        <nav class="navbar navbar-expand-lg navbar-light bg-secondary ">   
          <%= link_to root_path, class: "navbar-brand text-light font-italic" do %>
            <h1>recipe site</h1>
          <% end %>
        
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse " id="navbarNavAltMarkup">
            <% if user_signed_in? %>
              <div class="navbar-nav ">
                  <a><%= link_to "レシピの一覧", recipes_path, class:"nav-link text-light h5" %></a>
                  <a><%= link_to "レシピの投稿", new_recipe_path, class:"nav-link text-light h5" %></a>
                  <a><%= link_to "ユーザー一覧", users_path, class:"nav-link text-light h5" %></a>
                  <a><%= link_to "マイページ", user_path(current_user), class:"nav-link text-light h5" %></a>
                  <a><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class:"nav-link text-light h5" %></a>
              </div>  
            <% else %>
              <div class="navbar-nav">
                  <a><%= link_to "レシピの一覧", recipes_path, class:"nav-link text-light h5" %></a>
                  <a><%= link_to "ユーザー一覧", users_path, class:"nav-link text-light h5" %></a>
                  <a><%= link_to "ログイン", new_user_session_path, class:"nav-link text-light h5" %></a>
                  <a><%= link_to "新規登録", new_user_registration_path, class:"nav-link text-light h5" %></a>
              </div>
            <% end %>
          </div>
        </nav>
        <%= yield %>
    </div>
  </body>
</html>

