<h1 class="text-center">レシピ一覧</h1>
<div class="container">
  <div class="row">
    <% @recipes.each do |recipe| %>
      <div class="pb-2 col-lg-4">
        <div class="card">
          <%= link_to recipe_path(recipe) do %>
            <%= attachment_image_tag recipe, :image, class:"card-img-top img-fluid", alt:"..." %>
          <% end %>
            <%=link_to recipe.user.username, user_path(recipe.user), class:"btn btn-secondary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
